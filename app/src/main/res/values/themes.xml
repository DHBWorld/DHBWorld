<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DHBWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>

        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_dark</item>
        <item name="colorSecondaryVariant">@color/grey_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>






        <item name="android:textColor">@color/dark_bg_more_elevated</item>
        <item name="colorControlNormal">@color/dark_bg_more_elevated</item>

        <item name="dashboardCardBackground">@color/white</item>
        <item name="dashboardCardBackgroundElevated">@color/grey_light</item>
        <item name="dashboardCardBackgroundMoreElevated">@color/even_lighter_gray</item>

        <item name="pastWeekendBackgroundColorCustom">@color/ltgrey</item>

        <item name="cantineCardBackground">@color/white</item>
        <item name="cantineCardBackgroundElevated">@color/white</item>
        <item name="cantineBackground">@color/grey_light</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorSecondary">@color/grey_dark</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.possitiveButton</item>

    </style>

    <style name="Widget.App.possitiveButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">


    </style>
    <style name="Theme.DHBWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.DHBWorld.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DHBWorld.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Card_Bg">
        <item name="cardBackgroundColor">#10000000</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Theme.IconThemeWhite" parent="Theme.DHBWorld">
        <item name="iconTint">@color/white</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.IconTheme" parent="Theme.DHBWorld">
        <item name="iconTint">@color/black</item>
        <item name="tint">@color/black</item>
    </style>



</resources>