<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topAppBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.AppBarLayout.Primary"
            android:fitsSystemWindows="true">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/page_title"
                app:menu="@menu/top_app_bar"
                app:navigationIcon="@drawable/navitem"

                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                />
        </com.google.android.material.appbar.AppBarLayout>
        <!-- everything above is for the topbar and navigation-->


        <ScrollView
            android:id="@+id/scrollViewCantine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topAppBarLayout">

            <LinearLayout
                android:id="@+id/layoutDashboardCards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:rippleColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:baselineAligned="false"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/red"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:id="@+id/card_dash_mealPlan_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/red"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/buttonCardMealPlan"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:stateListAnimator="@null" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/dashboardCardBackground"
                            android:orientation="vertical"
                            android:paddingVertical="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp">

                            <LinearLayout
                                android:id="@+id/layoutMealOne"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingVertical="7dp">

                                <TextView
                                    android:id="@+id/textViewAdvertTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questions"
                                    android:textStyle="bold"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/textViewAdvertText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questions"
                                    android:textSize="15sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_nav"
        app:menu="@menu/navigation_drawer"
        />
</androidx.drawerlayout.widget.DrawerLayout>