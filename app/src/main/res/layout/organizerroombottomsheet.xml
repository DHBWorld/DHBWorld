<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/organizerRoomNameView"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/organizerRoomNameText"
            android:text="D224"
            android:textSize="24sp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/organizerRoomTypeView"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/organizerRoomTypeText"
            android:text="HÃ¶rsaal"
            android:layout_gravity="top"
            android:textSize="20sp"
            android:layout_weight="1"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/show_timeplan_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_dark"
                style="@style/Widget.MaterialComponents.Button"
                android:text="Time plan" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/find_room_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button"
                android:text="@string/find_room" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>