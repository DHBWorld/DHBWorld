<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/module_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kommunikations- und Netztechnik"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/credits_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20,0"
            android:textAlignment="center"
            android:layout_weight="0.1"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/grade_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,9"
            android:textAlignment="center"
            android:layout_weight="0.1"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:id="@+id/passed_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:src="@drawable/ic_baseline_check_box_24"
            app:tint="@color/sea_green"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>