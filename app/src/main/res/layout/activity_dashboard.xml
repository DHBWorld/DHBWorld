<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/topAppBarLayout"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="0dp"

                app:menu="@menu/dashboard_top_app_bar"
                app:navigationIcon="@drawable/navitem"
                app:title="@string/page_title"
                />


        </com.google.android.material.appbar.AppBarLayout>
        <!-- everything above is for the topbar and navigation-->


        <ScrollView
            android:id="@+id/scrollViewCantine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topAppBarLayout">

            <LinearLayout
                android:id="@+id/layoutDashboardCards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dash_userInteraction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/grey_light"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:id="@+id/card_dash_userInteraction_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="?attr/dashboardCardBackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageBox_dashboard_canteen"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_baseline_restaurant_24"
                            app:tint="@color/grey_light" />

                        <ImageView
                            android:id="@+id/imageBox_dashboard_coffee"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/baseline_coffee_maker_24" />

                        <ImageView
                            android:id="@+id/imageBox_dashboard_printer"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_baseline_print_24" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dash_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:baselineAligned="false"
                    android:checkable="true"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/red"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:id="@+id/card_dash_calendar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/red"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonCardCalendar"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:stateListAnimator="@null" />

                        <LinearLayout
                            android:id="@+id/layoutCardCalendar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/dashboardCardBackground"
                            android:orientation="vertical"
                            android:paddingVertical="10dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:id="@+id/layoutCardCalendarInformation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewCalendar"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_uni" />

                                <TextView
                                    android:id="@+id/nextClassView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingRight="7dp"
                                    android:text="@string/questions"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:id="@+id/layoutTimeCalendarCard"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:gravity="right"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:id="@+id/layoutTimeDigit"
                                            android:layout_width="90dp"
                                            android:layout_height="wrap_content"
                                            android:elevation="4dp"
                                            android:gravity="center"
                                            android:background="?attr/dashboardCardBackgroundElevated"
                                            android:orientation="horizontal"
                                            android:padding="7dp">

                                            <TextView
                                                android:id="@+id/timeViewCalendarDashboard"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/questionsTime"
                                                android:textSize="23dp" />

                                            <TextView
                                                android:id="@+id/timeViewMinCalendarDashboard"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_gravity="center"
                                                android:gravity="center_vertical"
                                                android:paddingStart="5dp"
                                                android:textSize="12dp" />
                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/letterTimeViewCalendarDashboard"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:background="?attr/dashboardCardBackgroundMoreElevated"
                                            android:gravity="center"
                                            android:textSize="12dp"
                                            android:text="endet in"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dash_kvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:baselineAligned="false"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/grey_light"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:id="@+id/card_dash_kvv_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey_light"
                        android:orientation="horizontal"
                        android:paddingRight="30dp">

                        <LinearLayout
                            android:id="@+id/layoutCardKvv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/dashboardCardBackground"
                            android:orientation="vertical"
                            android:paddingStart="35dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="15dp">

                            <LinearLayout
                                android:id="@+id/layoutDepartureOne"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewTramOne"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_tram" />

                                <TextView
                                    android:id="@+id/textViewTramLineOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="@string/questions"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textViewTramPlatformOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:paddingHorizontal="7dp"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textViewTramTimeOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:paddingLeft="7dp"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutDepartureTwo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:paddingVertical="7dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_tram" />

                                <TextView
                                    android:id="@+id/textViewTramLineTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="@string/questions"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textViewTramPlatformTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:paddingHorizontal="7dp"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textViewTramTimeTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:paddingLeft="7dp"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutDepartureThree"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_tram" />

                                <TextView
                                    android:id="@+id/textViewTramLineThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text="@string/questions"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textViewTramPlatformThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:paddingHorizontal="7dp"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/textViewTramTimeThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:paddingLeft="7dp"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/buttonCardKvv"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:stateListAnimator="@null" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dash_mealPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:baselineAligned="false"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/red"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:id="@+id/card_dash_mealPlan_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/red"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/buttonCardMealPlan"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:stateListAnimator="@null" />

                        <LinearLayout
                            android:id="@+id/layoutCardMealPlan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/dashboardCardBackground"
                            android:orientation="vertical"
                            android:paddingVertical="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="30dp">

                            <LinearLayout
                                android:id="@+id/layoutMealOne"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="7dp">

                                <ImageView
                                    android:id="@+id/imageViewMeal"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_restaurant" />

                                <TextView
                                    android:id="@+id/textViewMealOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questions"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutMealTwo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="7dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_restaurant" />

                                <TextView
                                    android:id="@+id/textViewMealTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questions"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutMealThree"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="7dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_restaurant" />

                                <TextView
                                    android:id="@+id/textViewMealThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questions"
                                    android:textSize="15sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_dash_pi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:baselineAligned="false"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/grey_light"
                    app:strokeWidth="3dp">

                    <LinearLayout
                        android:id="@+id/card_dash_pi_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey_light"
                        android:orientation="horizontal"
                        android:paddingRight="30dp">

                        <LinearLayout
                            android:id="@+id/layoutCardPI"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/dashboardCardBackground"
                            android:orientation="vertical"
                            android:paddingStart="35dp"
                            android:paddingTop="15dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="15dp">

                            <LinearLayout
                                android:id="@+id/layoutInfoOne"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="7dp">

                                <ImageButton
                                    android:id="@+id/imageButtonCopyOne"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_copy" />

                                <TextView
                                    android:id="@+id/textViewPersonalInfoOne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questions"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutInfoTwo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingVertical="7dp">

                                <ImageButton
                                    android:id="@+id/imageButtonCopyTwo"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_copy" />

                                <TextView
                                    android:id="@+id/textViewPersonalInfoTwo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questions"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layoutInfoThree"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="7dp">

                                <ImageButton
                                    android:id="@+id/imageButtonCopyThree"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:background="@drawable/ic_copy" />

                                <TextView
                                    android:id="@+id/textViewPersonalInfoThree"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/questions"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/buttonCardPI"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:stateListAnimator="@null" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header_nav"
        app:menu="@menu/navigation_drawer"
        />
</androidx.drawerlayout.widget.DrawerLayout>